{
    "name": "MDML Endpoints",
    "description": "A framework for the deployment of MDML Endpoints",
    "keywords": ["rest", "endpoints", "data mapping"],
    "license": "MIT",
    "authors": [
        {
            "name": "David Henry",
            "email": "dhenry@mohistory.org"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "tuupola/slim-jwt-auth": "^2.3",
        "mongodb/mongodb": "^1.1",
	"league/json-guard": "^1.0",
        "league/json-reference": "^1.0",
        "sabre/xml": "^1.5",
        "guzzlehttp/guzzle":   "~5.0",
        "glenscott/url-normalizer": "^1.4"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S 0.0.0.0:8080 -t public public/index.php",
        "test": "phpunit"
    },
    "autoload": {
        "psr-4": {
            "": "lib/"
        }
    }

}
